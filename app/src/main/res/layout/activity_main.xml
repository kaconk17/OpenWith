<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#92B8BED6"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Open URL (ACTION_VIEW)"
                android:textColor="@color/fontcolor" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="URL : "
                    android:textColor="@color/fontcolor" />

                <EditText
                    android:id="@+id/texturl"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="https://"
                    android:inputType="textPersonName"
                    android:textColor="@color/fontcolor"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:onClick="OpenUrl"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/webicon" />

            </TableRow>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Text (ACTION_SEND)"
                android:textColor="@color/fontcolor" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Text : "
                    android:textColor="@color/fontcolor" />

                <EditText
                    android:id="@+id/inputext"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Text"
                    android:inputType="textPersonName"
                    android:textColor="@color/fontcolor"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:onClick="OpenText"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_text" />
            </TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Dial Number (ACTION_DIAL)"
                android:textColor="@color/fontcolor" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Phone Number : "
                    android:textColor="@color/fontcolor" />

                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColor="@color/fontcolor"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/btndial"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:onClick="OpenDial"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/dialicon" />
            </TableRow>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Call Phone Number (ACTION_CALL)"
                android:textColor="@color/fontcolor" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Phone Number : "
                    android:textColor="@color/fontcolor" />

                <EditText
                    android:id="@+id/numbercall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColor="@color/fontcolor"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/btncall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:onClick="OpenCall"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/callicon2" />
            </TableRow>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Alarm (ACTION_SET_ALARM)"
                android:textColor="@color/fontcolor" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Time : "
                    android:textColor="@color/fontcolor" />

                <EditText
                    android:id="@+id/texttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Set Time"
                    android:inputType="textPersonName"
                    android:textColor="@color/fontcolor"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:onClick="SetAlarm"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/alarmicon" />
            </TableRow>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Save Contact Info (ACTION_INSERT)"
                android:textColor="@color/fontcolor" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Contact : "
                    android:textColor="@color/fontcolor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/textname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:textColor="@color/fontcolor"
                        android:textSize="15dp" />


                    <EditText
                        android:id="@+id/textnomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:textColor="@color/fontcolor"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/textemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/fontcolor"
                        android:textSize="15dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:onClick="SaveContact"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/contact" />
            </TableRow>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>